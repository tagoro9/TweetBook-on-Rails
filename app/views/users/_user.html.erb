<li>
  <%= gravatar_for user, :size => 30 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? %>
  | <%= link_to "Borrar", user, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{user.name}" %>
  <% end %>
  <%= "\"" + user.microposts.first.content[0,90] + "...\"" if !user.microposts.empty? %>
</li>