<h2>Similares a ti</h2>
<div class="similares">
	<%array=[]
	for i in current_user.following do
		for j in i.following do
			array << j.email
		end
		array.uniq!
		array.delete(current_user.email)
	end %>
	<% for k in 0..2 %>
		<%if (k < array.size) %>
			<div class="smallUser">
				<% num = rand(array.size) %>
				<%= gravatar_for User.find_by_email(array[num]), :size => :thumb %>
				<span class="name"><%= link_to (User.find_by_email(array[num])).name, array[k] %></span>
				<% array.delete array[num] %>
			</div>
		<%end%>
	<% end %>
</div>