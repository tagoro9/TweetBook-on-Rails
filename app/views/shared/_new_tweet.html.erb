<!-- MODAL NEW TWEET-->
<div class="modal fade" id="newTweet">
	<div class="modal-header">
		<a class="close" data-dismiss="modal">×</a>
			<h3>¿Qué está pasando?</h3>
	</div>
	<%= form_for @micropost do |f| %>
		<div class="modal-body">
  			<div class="field" id="modalPostContent">
    			<%= f.text_area :content, :placeholder => "Publicar algo..." %>
  			</div>
  			<div class="modalActions">
				<span id="modalCharactersLeft">140</span>
				<%= f.submit "Publicar", :class => 'btn btn-primary tweetBookButton' %>
			</div>
		</div>			
	<% end %>
</div> 