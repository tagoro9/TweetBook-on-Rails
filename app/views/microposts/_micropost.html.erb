<div class="post">
	<div class="row-fluid">
		<div class="span1 avatar">
			<%= gravatar_for micropost.user, :size => 50 %>
		</div>
		<div class="postContent">
			<h2 class="postFrom"><span class="nub"></span><%= micropost.user.name%>&nbsp;<span class="userName">@llosimura</span></h2>
			<p class="content"><%= wrap(micropost.content) %></p>
			<p class="more">
				<span class="operations">
					<% if current_user?(micropost.user) %>

							<i class="icon-trash"></i>
				   		   <%= link_to "Borrar", '#delete-confirm',
                       						   :class => 'delete-confirm',
                       						   "data-id" => micropost.id,
            	       						   :title => micropost.content %>	
				   <% else %>
					  	 	<i class="icon-repeat"></i>
   						   							
						      <!--<%= link_to "Borrar", micropost, :method => :delete,
                                       						   :confirm => "¿Está seguro?",
                                       						   :title => micropost.content %>-->
					<% end%>
				</span>&nbsp;-&nbsp;
				<span class="time"><%= time_ago_in_words(micropost.created_at) %> ago.</span></p>
		</div>
	</div>
</div>
